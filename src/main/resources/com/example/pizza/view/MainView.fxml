<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pizzashop.controller.MainController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER" prefHeight="60.0" style="-fx-background-color: #2c3e50;">
                    <children>
                        <Label style="-fx-text-fill: white;" text="🍕 Pizza Shop Management System">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>

                <!-- Controls -->
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="15.0" style="-fx-background-color: #ecf0f1;">
                    <children>
                        <Label text="หมวดหมู่:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="categoryFilter" prefWidth="150.0" />
                        <Label text="ค้นหา:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="searchField" prefWidth="200.0" promptText="ค้นหาสินค้า..." />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="registerMemberButton" mnemonicParsing="false" onAction="#openMemberRegistration"
                                style="-fx-background-color: #3498db; -fx-text-fill: white;" text="สมัครสมาชิก" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.6" orientation="HORIZONTAL">

            <!-- Left Side - Product List -->
            <AnchorPane minWidth="400.0">
                <children>
                    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <children>
                            <Label style="-fx-font-weight: bold;" text="รายการสินค้า">
                                <font>
                                    <Font size="16.0" />
                                </font>
                            </Label>

                            <TableView fx:id="itemTableView" onMouseClicked="#handleItemSelection" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="nameColumn" prefWidth="200.0" text="ชื่อสินค้า" />
                                    <TableColumn fx:id="categoryColumn" prefWidth="120.0" text="ประเภท" />
                                    <TableColumn fx:id="priceColumn" prefWidth="100.0" text="ราคา" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                            </TableView>

                            <HBox alignment="CENTER" spacing="10.0">
                                <children>
                                    <Button fx:id="addToCartButton" mnemonicParsing="false" onAction="#addToCart"
                                            style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="เพิ่มในตะกร้า" />
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </HBox>
                        </children>
                    </VBox>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </AnchorPane>

            <!-- Right Side - Cart and Order Summary -->
            <AnchorPane minWidth="400.0">
                <children>
                    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" spacing="10.0">
                        <children>

                            <!-- Order Info -->
                            <VBox spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5;">
                                <children>
                                    <Label style="-fx-font-weight: bold;" text="ข้อมูลออเดอร์">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>

                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                        <children>
                                            <Label text="สมาชิก:" />
                                            <ComboBox fx:id="memberComboBox" prefWidth="200.0" />
                                        </children>
                                    </HBox>

                                    <CheckBox fx:id="dineInCheckBox" mnemonicParsing="false" text="ทานที่ร้าน" />
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </VBox>

                            <!-- Cart -->
                            <VBox VBox.vgrow="ALWAYS">
                                <children>
                                    <Label style="-fx-font-weight: bold;" text="ตะกร้าสินค้า">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>

                                    <TableView fx:id="cartTableView" onMouseClicked="#handleCartSelection" prefHeight="200.0">
                                        <columns>
                                            <TableColumn fx:id="cartItemColumn" prefWidth="150.0" text="สินค้า" />
                                            <TableColumn fx:id="cartQuantityColumn" prefWidth="60.0" text="จำนวน" />
                                            <TableColumn fx:id="cartPriceColumn" prefWidth="100.0" text="ราคา" />
                                        </columns>
                                        <columnResizePolicy>
                                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                        </columnResizePolicy>
                                    </TableView>

                                    <HBox alignment="CENTER" spacing="10.0">
                                        <children>
                                            <Button fx:id="removeFromCartButton" mnemonicParsing="false" onAction="#removeFromCart"
                                                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="ลบ" />
                                            <Button fx:id="clearCartButton" mnemonicParsing="false" onAction="#clearCart"
                                                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="ล้างตะกร้า" />
                                        </children>
                                        <padding>
                                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                        </padding>
                                    </HBox>
                                </children>
                            </VBox>

                            <!-- Order Summary -->
                            <VBox spacing="5.0" style="-fx-background-color: #e8f5e8; -fx-background-radius: 5;">
                                <children>
                                    <Label style="-fx-font-weight: bold;" text="สรุปออเดอร์">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Label>

                                    <ScrollPane fitToWidth="true" prefHeight="150.0">
                                        <content>
                                            <TextArea fx:id="orderSummaryArea" editable="false" prefHeight="150.0"
                                                      style="-fx-background-color: transparent;" wrapText="true" />
                                        </content>
                                    </ScrollPane>

                                    <Separator />

                                    <HBox alignment="CENTER_RIGHT">
                                        <children>
                                            <Label style="-fx-font-weight: bold;" text="ราคารวม: ">
                                                <font>
                                                    <Font size="18.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="totalLabel" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;" text="0.00 บาท">
                                                <font>
                                                    <Font size="18.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>

                                    <Label fx:id="discountLabel" style="-fx-text-fill: #f39c12;" text="ประหยัดได้: 0.00 บาท" visible="false">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font>
                                    </Label>

                                    <Label fx:id="promotionLabel" style="-fx-text-fill: #e74c3c;" text="🍕 ได้พิซซ่าฟรี!" visible="false">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font>
                                    </Label>
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </VBox>

                            <!-- Checkout Button -->
                            <Button fx:id="checkoutButton" mnemonicParsing="false" onAction="#checkout" prefHeight="50.0"
                                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"
                                    text="ชำระเงิน" />

                        </children>
                    </VBox>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </AnchorPane>

        </SplitPane>
    </center>
</BorderPane>